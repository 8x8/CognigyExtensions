{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "watch": false,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  }
}